---
import GitHub from "@/components/icons/GitHub.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="absolute bottom-0 left-0 right-0 z-10 opacity-80 my-2 min-[375px]:pl-4 md:pl-0 mt-8 w-full mx-auto
  container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-cente rounded-full"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto flex flex-col md:flex-row md:items-center md:justify-between py-3"
  >
    <div
      class="justify-center hidden md:flex md:justify-start mb-4 ml-6 md:mb-0"
    >
      <span class="text-sm text-zinc-800/90 dark:text-zinc-200/90">
        Â© {currentYear}
        Grupo 1
      </span>
    </div>
    <ul
      class="flex flex-wrap justify-center md:justify-end mr-6 items-center text-sm font-medium dark:text-white/90 space-x-4 md:space-x-6"
    >
      <li>
        <a href="/#sobre-nosotros" class="hover:underline">Sobre nosotros</a>
      </li>
      <li>
        <a
          href="https://github.com/JayGhz/ai-tp"
          class="flex items-center hover:underline"
        >
          <GitHub class="size-4 font-bold" />
          <span class="ml-1">Repositorio</span>
        </a>
      </li>
    </ul>
  </div>
</footer>

<style>
  footer {
    animation: footer-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
    @apply dark:bg-black/30 bg-[#f9fafb];
  }

  @keyframes footer-shadown {
    0% {
      @apply bg-white/0 dark:bg-gray-100/0;
    }
    100% {
      @apply backdrop-blur-md;
    }
  }
</style>
